<h2>Hello from the Index page!</h2>

<div class="container">
  <div class="row gx-2">
    {{#each products }}
      <div class="card col-12 col-md-4">
        <img src="{{ previewImage }}" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title">{{ name }}</h5>
          <p class="card-text">{{ description }}</p>
          <a href="/product/{{ id }}" class="btn btn-primary">${{price }} View</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>

